	var dataform = '<div class="form-pricing-item"><hr><div class="form-group"><div class="d-flex justify-content-between"><label><i class="fa fa-fw fa-heading fa-sm mr-1"></i> <?= $this->language->create_biolink_pricingtable_modal->input->name ?></label><a class="text-primary" data-close-pricing="true" href="javascript:;">Delete</a></div><input type="text" class="form-control" name="name[]" placeholder="<?= $this->language->create_biolink_pricingtable_modal->input->name_placeholder ?>" required/></div><div class="row"><div class="col-lg-6"><div class="form-group"><label><i class="fa fa-fw fa-calendar fa-sm mr-1"></i> <?= $this->language->create_biolink_pricingtable_modal->input->currency ?></label><input type="text" class="form-control" name="currency[]" placeholder="<?= $this->language->create_biolink_pricingtable_modal->input->currency_placeholder ?>" required/></div></div><div class="col-lg-6"><div class="form-group"><label><i class="fa fa-fw fa-heading fa-sm mr-1"></i> <?= $this->language->create_biolink_pricingtable_modal->input->period ?></label><input type="text" class="form-control" name="period[]" placeholder="<?= $this->language->create_biolink_pricingtable_modal->input->period_placeholder ?>" /></div></div></div><div class="row"><div class="col-lg-6"><div class="form-group"><label><i class="fa fa-fw fa-calendar fa-sm mr-1"></i> <?= $this->language->create_biolink_pricingtable_modal->input->price ?></label><input type="text" class="form-control" name="price[]" placeholder="<?= $this->language->create_biolink_pricingtable_modal->input->price_placeholder ?>" required/></div></div><div class="col-lg-6"><div class="form-group"><label><i class="fa fa-fw fa-calendar fa-sm mr-1"></i> <?= $this->language->create_biolink_pricingtable_modal->input->price_strike ?></label><input type="text" class="form-control" name="price_strike[]" placeholder="<?= $this->language->create_biolink_pricingtable_modal->input->price_strike_placeholder ?>" /></div></div></div><div class="row"><div class="col-lg-6"><div class="form-group"><label><i class="fa fa-fw fa-heading fa-sm mr-1"></i> <?= $this->language->create_biolink_pricingtable_modal->input->button_text ?></label><input type="text" class="form-control" name="button_text[]" placeholder="<?= $this->language->create_biolink_pricingtable_modal->input->button_text_placeholder ?>"/></div></div><div class="col-lg-6"><div class="form-group"><label><i class="fa fa-fw fa-heading fa-sm mr-1"></i> <?= $this->language->create_biolink_pricingtable_modal->input->per ?></label><input type="text" class="form-control" name="per_text[]" placeholder="<?= $this->language->create_biolink_pricingtable_modal->input->per_placeholder ?>"/></div></div></div><div class="form-group"><div class="d-flex justify-content-between"><label><i class="fa fa-fw fa-heading fa-sm mr-1"></i> <?= $this->language->create_biolink_pricingtable_modal->input->features ?></label><div class="d-flex"><div data-add-feature="true" class="btn btn-primary mr-1"><i class="fa fa-plus" aria-hidden="true"></i></div><div data-close-feature="true" class="btn btn-danger"><i class="fa fa-times" aria-hidden="true"></i></div></div></div></div><div class="form-feature-container"><div class="form-feature-item"><div class="form-group"><div class="input-group"><input type="text" class="form-control" name="feat_bold[0][]" placeholder="<?= $this->language->create_biolink_pricingtable_modal->input->bold_placeholder ?>" required/><input type="text" class="form-control" name="feat_normal[0][]" placeholder="<?= $this->language->create_biolink_pricingtable_modal->input->normal_placeholder ?>"/></div></div></div></div></div>';
	var prc_parent = $(this).parents('.modal-body');
	if(prc_parent.length==0)
		prc_parent = $(this).parents('.card-body');
	var prc_container = prc_parent.find('.form-pricing-container');
	var cnt_prc = prc_container.find('.form-pricing-item')
	if(cnt_prc.length<9) {
		prc_container.append(dataform);
		cnt_prc = prc_container.find('.form-pricing-item')
		$.each(cnt_prc,function(a,b) {
			$.each($(b).find('.form-feature-container').find('.form-control'),function(c,d) {
				$(d).attr('name',$(d).attr('name').replace(/\[\d+\]\[\]/g,'['+a+'][]'));
			})
		})
	}
	eventClose()
});

$('[data-add-floating="true"]').off('click').on('click',function(e) {
	var dataform = '<div class="form-floating-button-item"><div class="form-group"><div class="d-flex justify-content-between"><label><i class="fa fa-fw fa-globe fa-sm mr-1"></i> <?= $this->language->create_biolink_floatbutton_modal->input->icon_button ?></label><a class="text-primary" data-close-floating="true" href="javascript:;">Delete</a></div><div class="input-group"><span class="input-group-prepend"><button class="btn btn-secondary" data-icon="" data-iconset="fontawesome5" role="iconpicker"></button></span><input type="text" name="icon[]" class="form-control" value="" placeholder="<?= $this->language->create_biolink_floatbutton_modal->input->icon_button_placeholder ?>" /></div><small class="text-muted"><?= $this->language->create_biolink_link_modal->input->icon_help ?></small></div><div data-color-picker="true" data-index="0" class="form-group"><label for="settings_background_color"><?= $this->language->create_biolink_floatbutton_modal->input->background_color ?></label><input data-picker="val" type="hidden" name="background[]" class="form-control" value="#fd4235" /><div id="settings_background_color_float_pickr_0" data-picker="color"></div></div><div data-color-picker="true" data-index="0" class="form-group"><label for="settings_text_color"><?= $this->language->create_biolink_floatbutton_modal->input->text_color ?></label><input data-picker="val" type="hidden" name="text[]" class="form-control" value="#ffffff" /><div id="settings_text_color_float_pickr_0" data-picker="color"></div></div><div class="form-group"><label><i class="fa fa-fw fa-signature fa-sm mr-1"></i> <?= $this->language->create_biolink_floatbutton_modal->input->link_url ?></label><input type="text" class="form-control" name="link_url[]" required="required" placeholder="<?= $this->language->create_biolink_floatbutton_modal->input->link_url_placeholder ?>" /></div><div class="form-group"><label><i class="fa fa-fw fa-signature fa-sm mr-1"></i> <?= $this->language->create_biolink_floatbutton_modal->input->link_title ?></label><input type="text" class="form-control" name="link_title[]" required="required" placeholder="<?= $this->language->create_biolink_floatbutton_modal->input->link_title_placeholder ?>" /></div></div>';
	var flt_parent = $(this).parents('.modal-body');
	if(flt_parent.length==0)
		flt_parent = $(this).parents('.card-body');
	var flt_container = flt_parent.find('.form-floating-button-container');
	var cnt_flt = flt_container.find('.form-floating-button-item')
	if(cnt_flt.length<5) { 
		flt_container.append(dataform);
		$('[role="iconpicker"]:not(".ico-picker")').addClass('ico-picker').iconpicker()
		/* Fontawesome icon picker */
		$('[role="iconpicker"]').off('change').on('change', event => {
			$(event.currentTarget).closest('.form-group').find('input').val(event.icon).trigger('change');
		});
		setDataColorPicker()
	}
	eventClose()
});

$('[role="iconpicker"]:not(".ico-picker")').addClass('ico-picker').iconpicker()
$('[role="iconpicker"]').off('change').on('change', event => {
	$(event.currentTarget).closest('.form-group').find('input').val(event.icon).trigger('change');
});

$('#password_protector').on('change',function(e){
	if($(this).prop('checked')) {
		$('#cpassword_protector').show().find('input[name="password_lock"]').attr('required','required')
		$('#dpassword_protector').show()
	} else {
		$('#cpassword_protector').hide().find('input[name="password_lock"]').removeAttr('required')
		$('#dpassword_protector').hide()
	}
})

function eventClose() {
	$('[data-close-image="true"]').off('click').on('click',function(e) {
		var img_container = $(this).parents('.form-images-container')
		$(this).parents('.form-group').remove();
		$.each(img_container.find('.form-group'),function(i,j) {
			$.each($(j).find('[data-field]'),function(a,b) {
				if($(b).attr('data-field').indexOf('.')>-1) {
					var bt = $(b).attr('data-field').split('.');
					$(b).attr('data-field',bt[0] + '.' + i)
					
				}
			})
		});
	});
	$('[data-close-pricing="true"]').off('click').on('click',function(e) {
		var prc_parent = $(this).parents('.modal-body');
		if(prc_parent.length==0)
			prc_parent = $(this).parents('.card-body');
		$(this).parents('.form-pricing-item').remove();
		var cnt_prc = prc_parent.find('.form-pricing-container').find('.form-pricing-item')
		$.each(cnt_prc,function(a,b) {
			$.each($(b).find('.form-feature-container').find('.form-control'),function(c,d) {
				$(d).attr('name',$(d).attr('name').replace(/\[\d+\]\[\]/g,'['+a+'][]'));
			})
		})
	});
	$('[data-add-feature="true"]').off('click').on('click',function(e) {
		var dataform = '<div class="form-feature-item"><div class="form-group"><div class="input-group"><input type="text" class="form-control" name="feat_bold[0][]" placeholder="<?= $this->language->create_biolink_pricingtable_modal->input->bold_placeholder ?>" required/><input type="text" class="form-control" name="feat_normal[0][]" placeholder="<?= $this->language->create_biolink_pricingtable_modal->input->normal_placeholder ?>"/></div></div></div>';
		var ftr_parent = $(this).parents('.form-pricing-item');
		var ftr_container = ftr_parent.find('.form-feature-container');
		var cnt_ftr = ftr_container.find('.form-feature-item')
		if(cnt_ftr.length<10) {
			ftr_container.append(dataform);
			cnt_ftr = ftr_container.find('.form-feature-item')
			$.each(cnt_ftr.find('.form-control'),function(a,b) {
				$(b).attr('name',$(b).attr('name').replace(/\[\d+\]\[\]/g,'['+ftr_parent.index()+'][]'));
			})
		}
		eventClose()
	});
	$('[data-close-feature="true"]').off('click').on('click',function(e) {
		var ftr_parent = $(this).parents('.form-pricing-item');
		var ftr_container = ftr_parent.find('.form-feature-container');
		var cnt_ftr = ftr_container.find('.form-feature-item')
		if(cnt_ftr.length>1) 
			cnt_ftr.last().remove();
	});
	$('[data-close-floating="true"]').off('click').on('click',function(e) {
		$(this).parents('.form-floating-button-item').remove();
	});
}
</script>
<script>
    /* Settings Tab */
    /* Initiate the color picker */
    let pickr_options = {
        comparison: false,

        components: {
            preview: true,
            opacity: true,
            hue: true,
            comparison: false,
            interaction: {
                hex: true,
                rgba: false,
                hsla: false,
                hsva: false,
                cmyk: false,
                input: true,
                clear: false,
                save: true
            }
        }
    };

    /* Helper to generate avatar preview */
    function generate_image_preview(input) {

        if(input.files && input.files[0]) {
            let reader = new FileReader();

            reader.onload = event => {
                $('#image_file_preview').attr('src', event.target.result);
                $('#biolink_preview_iframe').contents().find('#image').attr('src', event.target.result).show();
            };

            reader.readAsDataURL(input.files[0]);
        }
    }

    $('#image_file_input').on('change', event => {
        $('#image_file_status').show();

        $('[data-toggle="tooltip"]').tooltip();

        $('input[name="image_delete"]').val(false);

        generate_image_preview(event.currentTarget);
    });

    $('#image_file_remove').on('click', () => {
        let default_src = $('#image_file_preview').attr('data-default-src');
        let empty_src = $('#image_file_preview').attr('data-empty-src');

        /* Check if new avatar is selected and act accordingly */
        if($('#image_file_input').get(0).files.length > 0) {

            /* Check if we had a non default image previously */
            if(default_src == empty_src) {
                $('#image_file_preview').attr('src', empty_src);
                $('#biolink_preview_iframe').contents().find('#image').hide();
                $('#image_file_status').hide();
            } else {
                $('#image_file_preview').attr('src', default_src);
                $('#image_file_input').replaceWith($('#image_file_input').val('').clone(true));
            }

        } else {
            $('#image_file_preview').attr('src', empty_src);
            $('#biolink_preview_iframe').contents().find('#image').hide();
            $('input[name="image_delete"]').val(true);
            $('#image_file_status').hide();
        }

    });

    /* Preview handlers */
    $('#settings_title').on('change paste keyup', event => {
        $('#biolink_preview_iframe').contents().find('#title').text($(event.currentTarget).val());
    });

    $('#settings_description').on('change paste keyup', event => {
        $('#biolink_preview_iframe').contents().find('#description').text($(event.currentTarget).val());
    });

    /* Text Color Handler */
    let settings_text_color_pickr = Pickr.create({
        el: '#settings_text_color_pickr',
        default: $('#settings_text_color').val(),
        ...{
            comparison: false,

            components: {
                preview: true,
                opacity: false,
                hue: true,
                comparison: false,
                interaction: {
                    hex: true,
                    rgba: false,
                    hsla: false,
                    hsva: false,
                    cmyk: false,
                    input: true,
                    clear: false,
                    save: true
                }
            }
        }
    });

    settings_text_color_pickr.on('change', hsva => {
        $('#settings_text_color').val(hsva.toHEXA().toString());


        $('#biolink_preview_iframe').contents().find('header').css('color', hsva.toHEXA().toString());
        $('#biolink_preview_iframe').contents().find('#branding').css('color', hsva.toHEXA().toString());
    });
	
	setDataColorPicker()
	function setDataColorPicker() {
		$.each($('[data-color-picker]'),function(i,j) {
			if(!$(this).hasClass('color-picked')) {
				$(this).addClass('color-picked')
				const pickr_background_type = Pickr.create({
					el: $(this).find('[data-picker="color"]').get(0),
					default: $(this).find('[data-picker="val"]').val(),
					...pickr_options
				}).on('change', (color, source, instance) => {
					var container = $(instance.getRoot().root).parents('[data-color-picker]')
					container.find('[data-picker="val"]').val(color.toHEXA().toString())
					if(container.find('label').attr('for')=='settings_background_color')
						$('#biolink_preview_iframe').contents().find('.items-wrapper .menu-item').eq(container.parents('.form-floating-button-item').index()).attr('style','background-color:'+color.toHEXA().toString());
					else if(container.find('label').attr('for')=='settings_text_color')
						$('#biolink_preview_iframe').contents().find('.items-wrapper .menu-item').eq(container.parents('.form-floating-button-item').index()).find('svg').attr('style','color:'+color.toHEXA().toString());
				})
			}
		})
	}

    /* Socials Color Handler */
    let settings_socials_color_pickr = Pickr.create({
        el: '#settings_socials_color_pickr',
        default: $('#settings_socials_color').val(),
        ...pickr_options
    });

    settings_socials_color_pickr.on('change', hsva => {
        $('#settings_socials_color').val(hsva.toHEXA().toString());


        $('#biolink_preview_iframe').contents().find('#socials a svg').css('color', hsva.toHEXA().toString());
    });

    /* Background Type Handler */
    let background_type_handler = () => {
        let type = $('#settings_background_type').find(':selected').val();

        /* Show only the active background type */
        $(`div[id="background_type_${type}"]`).show();
        $(`div[id="background_type_${type}"]`).find('[name^="background"]').removeAttr('disabled');

        /* Disable the other possible types so they dont get submitted */
        let background_type_containers = $(`div[id^="background_type_"]:not(div[id$="_${type}"])`);

        background_type_containers.hide();
        background_type_containers.find('[name^="background"]').attr('disabled', 'disabled');
		if(type=='preset') {
			$('#biolink_preview_iframe').contents().find('body').removeClass(`link-body-background-one`)
			$('#biolink_preview_iframe').contents().find('body').removeClass(`link-body-background-two`)
			$('#biolink_preview_iframe').contents().find('body').removeClass(`link-body-background-three`)
			$('#biolink_preview_iframe').contents().find('body').removeClass(`link-body-background-four`)
			$('#biolink_preview_iframe').contents().find('body').removeClass(`link-body-background-five`)
			$('#biolink_preview_iframe').contents().find('body').removeClass(`link-body-background-six`)
			$('#biolink_preview_iframe').contents().find('body').removeClass('link-body-background-anigradient')
			$('#biolink_preview_iframe').contents().find('body').addClass(`link-body-background-one`).removeAttr('style');
		} else if(type=='anigradient') {
			let color_base_one = $('#settings_background_type_anigradient_color_one').val();
			let color_base_two = $('#settings_background_type_anigradient_color_two').val();
			let color_base_three = $('#settings_background_type_anigradient_color_three').val();
			let color_base_four = $('#settings_background_type_anigradient_color_four').val();

			$('#biolink_preview_iframe').contents().find('body').removeClass(`link-body-background-one`)
			$('#biolink_preview_iframe').contents().find('body').removeClass(`link-body-background-two`)
			$('#biolink_preview_iframe').contents().find('body').removeClass(`link-body-background-three`)
			$('#biolink_preview_iframe').contents().find('body').removeClass(`link-body-background-four`)
			$('#biolink_preview_iframe').contents().find('body').removeClass(`link-body-background-five`)
			$('#biolink_preview_iframe').contents().find('body').removeClass(`link-body-background-six`)
			$('#biolink_preview_iframe').contents().find('body').removeClass('link-body-background-anigradient').addClass('link-body-background-anigradient').attr('style', `background: linear-gradient(110deg, ${color_base_one}, ${color_base_two}, ${color_base_three}, ${color_base_four});`);
		} else if(type=='gradient') {
			let color_one = $('#settings_background_type_gradient_color_one').val();
			let color_two = $('#settings_background_type_gradient_color_two').val();
			
			$('#biolink_preview_iframe').contents().find('body').removeClass(`link-body-background-one`)
			$('#biolink_preview_iframe').contents().find('body').removeClass(`link-body-background-two`)
			$('#biolink_preview_iframe').contents().find('body').removeClass(`link-body-background-three`)
			$('#biolink_preview_iframe').contents().find('body').removeClass(`link-body-background-four`)
			$('#biolink_preview_iframe').contents().find('body').removeClass(`link-body-background-five`)
			$('#biolink_preview_iframe').contents().find('body').removeClass(`link-body-background-six`)
			$('#biolink_preview_iframe').contents().find('body').removeClass('link-body-background-anigradient')
			$('#biolink_preview_iframe').contents().find('body').attr('style', `background-image: linear-gradient(135deg, ${color_one} 10%, ${color_two} 100%);`);
		} else if(type=='color') {
			$('#biolink_preview_iframe').contents().find('body').removeClass(`link-body-background-one`)
			$('#biolink_preview_iframe').contents().find('body').removeClass(`link-body-background-two`)
			$('#biolink_preview_iframe').contents().find('body').removeClass(`link-body-background-three`)
			$('#biolink_preview_iframe').contents().find('body').removeClass(`link-body-background-four`)
			$('#biolink_preview_iframe').contents().find('body').removeClass(`link-body-background-five`)
			$('#biolink_preview_iframe').contents().find('body').removeClass(`link-body-background-six`)
			$('#biolink_preview_iframe').contents().find('body').removeClass('link-body-background-anigradient')
			$('#biolink_preview_iframe').contents().find('body').attr('style', `background: ${$('#settings_background_type_color').val()};`);
		} else if(type=='image')  {
			var img_preview = $('#background_type_image_preview')
			var img_src = '';
			console.log(img_preview.length);
			if(img_preview.length>0) {
				img_src = img_preview.attr('src');
				$('#biolink_preview_iframe').contents().find('body').removeClass('link-body-background-anigradient').attr('style','background:url('+img_src+')')
			} else
				$('#biolink_preview_iframe').contents().find('body').removeClass('link-body-background-anigradient').removeAttr('style')
		}	
    };

    background_type_handler();

    $('#settings_background_type').on('change', background_type_handler);

    /* Preset Baclground Preview */
    $('#background_type_preset input[name="background"]').on('change', event => {
        let value = $(event.currentTarget).val();
		
		$('#biolink_preview_iframe').contents().find('body').removeClass(`link-body-background-one`)
		$('#biolink_preview_iframe').contents().find('body').removeClass(`link-body-background-two`)
		$('#biolink_preview_iframe').contents().find('body').removeClass(`link-body-background-three`)
		$('#biolink_preview_iframe').contents().find('body').removeClass(`link-body-background-four`)
		$('#biolink_preview_iframe').contents().find('body').removeClass(`link-body-background-five`)
		$('#biolink_preview_iframe').contents().find('body').removeClass(`link-body-background-six`)
        $('#biolink_preview_iframe').contents().find('body').addClass(`link-body-background-${value}`).removeAttr('style');
    });
	
	/* Transition Background */
    let settings_background_type_anigradient_color_one_pickr = Pickr.create({
        el: '#settings_background_type_anigradient_color_one_pickr',
        default: $('#settings_background_type_anigradient_color_one').val(),
        ...pickr_options
    });
	
    settings_background_type_anigradient_color_one_pickr.on('change', hsva => {
        $('#settings_background_type_anigradient_color_one').val(hsva.toHEXA().toString());

        let color_base_one = $('#settings_background_type_anigradient_color_one').val();
        let color_base_two = $('#settings_background_type_anigradient_color_two').val();
		let color_base_three = $('#settings_background_type_anigradient_color_three').val();
		let color_base_four = $('#settings_background_type_anigradient_color_four').val();

        $('#biolink_preview_iframe').contents().find('body').removeClass('link-body-background-anigradient').addClass('link-body-background-anigradient').attr('style', `background: linear-gradient(110deg, ${color_base_one}, ${color_base_two}, ${color_base_three}, ${color_base_four});`);
    });
	
	let settings_background_type_anigradient_color_two_pickr = Pickr.create({
        el: '#settings_background_type_anigradient_color_two_pickr',
        default: $('#settings_background_type_anigradient_color_two').val(),
        ...pickr_options
    });

    settings_background_type_anigradient_color_two_pickr.on('change', hsva => {
        $('#settings_background_type_anigradient_color_two').val(hsva.toHEXA().toString());

        let color_base_one = $('#settings_background_type_anigradient_color_one').val();
        let color_base_two = $('#settings_background_type_anigradient_color_two').val();
		let color_base_three = $('#settings_background_type_anigradient_color_three').val();
		let color_base_four = $('#settings_background_type_anigradient_color_four').val();

        $('#biolink_preview_iframe').contents().find('body').removeClass('link-body-background-anigradient').addClass('link-body-background-anigradient').attr('style', `background: linear-gradient(110deg, ${color_base_one}, ${color_base_two}, ${color_base_three}, ${color_base_four});`);
    });
	
	let settings_background_type_anigradient_color_three_pickr = Pickr.create({
        el: '#settings_background_type_anigradient_color_three_pickr',
        default: $('#settings_background_type_anigradient_color_three').val(),
        ...pickr_options
    });

    settings_background_type_anigradient_color_three_pickr.on('change', hsva => {
        $('#settings_background_type_anigradient_color_three').val(hsva.toHEXA().toString());

        let color_base_one = $('#settings_background_type_anigradient_color_one').val();
        let color_base_two = $('#settings_background_type_anigradient_color_two').val();
		let color_base_three = $('#settings_background_type_anigradient_color_three').val();
		let color_base_four = $('#settings_background_type_anigradient_color_four').val();

        $('#biolink_preview_iframe').contents().find('body').removeClass('link-body-background-anigradient').addClass('link-body-background-anigradient').attr('style', `background: linear-gradient(110deg, ${color_base_one}, ${color_base_two}, ${color_base_three}, ${color_base_four});`);
    });
	
	let settings_background_type_anigradient_color_four_pickr = Pickr.create({
        el: '#settings_background_type_anigradient_color_four_pickr',
        default: $('#settings_background_type_anigradient_color_four').val(),
        ...pickr_options
    });

    settings_background_type_anigradient_color_four_pickr.on('change', hsva => {
