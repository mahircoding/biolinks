	$('[data-eshop-btn]').off('click').on('click',function(e) {
		var p_form = $(this).parents('form[role="form"]').get(0);
		if($(e.target).parents('.dropdown').length==0) {
			if(p_form.reportValidity()) {
				$(this).parents('form[role="form"]').find('.form-product-item .form-ctg-edit.show').find('[data-eshop="csp"]').click();
				$(this).parents('form[role="form"]').find('.form-product-item .form-bag-edit.show').find('[data-eshop="psi"]').click();
				$(this).parents('form[role="form"]').find('.form-product-item.open').not($(this).parents('.form-product-item')).toggleClass('open')
				$(this).parents('form[role="form"]').find('.form-product-item .fbv-switch').text('Show')
				$(this).parents('.form-product-item').toggleClass('open')
				if($(this).parents('.form-product-item').hasClass('open')) {
					$(this).parents('.form-product-item').find('.fbv-switch').text('Hide')
				} else {
					$(this).parents('.form-product-item').find('.fbv-switch').text('Show')
				}
			}
		}
	})
	$('[data-eshop]').off('click').on('click',function(e) {
		var p_form = $(this).parents('form[role="form"]').get(0);
		
		if($(this).data('eshop')=='dci') {
			var lenItem = $(this).parents('.form-product-main').find('.form-product-item')
			if(lenItem.length>1) {
				$(this).parents('.form-product-item').remove();
				e.preventDefault();
			}
		}
		if($(this).data('eshop')=='pci') {
			$(this).parents('.form-bag-item').remove();
			e.preventDefault();
		}
		
		if($(this).data('eshop')=='vmc') {
			$(this).parents('.form-mvrn-item').remove();
			e.preventDefault();
		}
		
		if($(this).data('eshop')=='vnc') {
			$(this).parents('.form-vbag-item').remove();
			e.preventDefault();
		}
		
		if(p_form.reportValidity()) {
			if($(this).data('eshop')=='csp') {
				var val = $(this).parents('.form-ctg-edit').find('input[name="category[]"]').val();
				$(this).parents('.form-product-ctg').find('.form-ctg-name').text(val.ucwords());
				$(this).parents('.form-product-ctg').find('.form-ctg-view').removeClass('hide')
				$(this).parents('.form-product-ctg').find('.form-ctg-edit').removeClass('show')
			} else if($(this).data('eshop')=='aci') {
				$(this).parents('form[role="form"]').find('.form-product-item .form-ctg-edit.show').find('[data-eshop="csp"]').click();
				$(this).parents('form[role="form"]').find('.form-product-item .form-bag-edit.show').find('[data-eshop="psi"]').click();
				$(this).parents('form[role="form"]').find('.form-product-item.open').removeClass('open')
				$(this).parents('form[role="form"]').find('.form-product-item .fbv-switch').text('Show')
				$(this).parents('.form-product-container').find('.form-product-main').append(eshp_ctg)
				var ctg_container = $(this).parents('form[role="form"]').find('.form-product-item')
				$.each(ctg_container,function(a,b) {
					$.each($(b).find('.form-product-bag').find('input.form-control,input.custom-file-input'),function(c,d) {
						$(d).attr('name',$(d).attr('name').replace(/\[\d+\]\[\]/g,'['+a+'][]'));
					})
				})
				eventButtonUpload();
				getDataEshop()
			} else if($(this).data('eshop')=='eci') {
				$(this).parents('form[role="form"]').find('.form-product-item .form-bag-edit.show').find('[data-eshop="psi"]').click();
				$(this).parents('.form-product-ctg').find('.form-ctg-view').removeClass('hide').addClass('hide');
				$(this).parents('.form-product-ctg').find('.form-ctg-edit').removeClass('hide').removeClass('show').addClass('show');
			} else if($(this).data('eshop')=='psi') {
				var bagedit = $(this).parents('.form-bag-edit');
				var bagitem = $(this).parents('.form-bag-item');
				
				var img = bagedit.find('div[role="image"]').attr('style');
				var ttl = bagedit.find('input[role="title"]').val();
				var dsc = bagedit.find('textarea[role="description"]').val();
				var prc = bagedit.find('input[role="price"]').val();
				var prs = bagedit.find('input[role="price_strike"]').val();
				
				bagitem.find('.fbv-image').attr('style',img)
				
				bagitem.find('.fbv-title').text(ttl.ucwords())
				if(dsc)
					bagitem.find('.fbv-description').removeAttr('style').text(dsc.ucfirst())
				else
					bagitem.find('.fbv-description').removeAttr('style').text('').hide();
				bagitem.find('.fbv-price').text(prc.money())
				if(prs)
					bagitem.find('.fbv-pstrike').removeAttr('style').find('.fbv-price-strike').text(prs.money())
				else
					bagitem.find('.fbv-pstrike').hide().find('.fbv-price-strike').text('');
				bagedit.find('[data-eshop="psi"]').parent().removeClass('justify-content-between').addClass('justify-content-center').find('[data-eshop="pci"]').remove()
				var csp = $(this).parents('form[role="form"]').find('[data-eshop="csp"]')
				if(csp.parent().not(':visible')) {
					csp.parent().removeAttr('style')
					csp.click()
				}
				bagitem.find('.form-bag-view').removeClass('hide')
				bagitem.find('.form-bag-edit').removeClass('show')
			} else if($(this).data('eshop')=='api') {
				$(this).parents('form[role="form"]').find('.form-product-item .form-ctg-edit.show').find('[data-eshop="csp"]').click();
				$(this).parents('form[role="form"]').find('.form-product-item .form-bag-edit.show').find('[data-eshop="psi"]').click();
				$(this).parents('form[role="form"]').find('.form-product-item.open').removeClass('open')
				$(this).parents('.form-product-item').removeClass('open').addClass('open')
				$(this).parents('.form-product-item').find('.form-product-bag').append(eshp_prd);
				var ctg_container = $(this).parents('form[role="form"]').find('.form-product-item')
				$.each(ctg_container,function(a,b) {
					$.each($(b).find('.form-product-bag').find('.form-control,.custom-file-input'),function(c,d) {
						$(d).attr('name',$(d).attr('name').replace(/\[\d+\]\[\]/g,'['+a+'][]'));
					})
				})
				eventButtonUpload();
				getDataEshop()
			} else if($(this).data('eshop')=='epi') {
				var bagitem = $(this).parents('.form-bag-item');
				
				$(this).parents('form[role="form"]').find('.form-product-item .form-ctg-edit.show').find('[data-eshop="csp"]').click();
				$(this).parents('form[role="form"]').find('.form-product-item .form-bag-edit.show').find('[data-eshop="psi"]').click();
				bagitem.find('.form-bag-view').removeClass('hide').addClass('hide');
				bagitem.find('.form-bag-edit').removeClass('show').addClass('show');
			} else if($(this).data('eshop')=='dpi') {
				var lenItem = $(this).parents('.form-product-bag').find('.form-bag-item')
				if(lenItem.length>1) {
					$(this).parents('.form-bag-item').remove();
				}
			} else if($(this).data('eshop')=='sci') {
				$(this).parents('.form-product-item').find('[data-eshop-btn]').click();
			} else if($(this).data('eshop')=='vra') {
				$(this).parents('.form-vrn-main').find('.form-mvrn-item.open').removeClass('open')
				$(this).parents('.form-vrn-main').append(eshp_vrn)
				$.each($(this).parents('form[role="form"]').find('.form-product-item'),function(a,b) {
					$.each($(b).find('.form-product-bag').find('.form-bag-item'),function(c,d){
						$.each($(d).find('.form-mvrn-item'),function(e,f) {
							$.each($(f).find('.form-control,.custom-file-input'),function(g,h){
								$(h).attr('name',$(h).attr('name').replace(/select\_variant\[\d+\]\[\d+\]\[\d+\]/g,'select_variant['+a+']['+c+']['+e+']'));
								$(h).attr('name',$(h).attr('name').replace(/\[\d+\]\[\d+\]\[\]/g,'['+a+']['+c+'][]'));
								$(h).attr('name',$(h).attr('name').replace(/\[\d+\]\[\d+\]\[\d+\]\[\]/g,'['+a+']['+c+']['+e+'][]'));
							})
						})
					})
				})
				eventButtonUpload();
				getDataEshop()
			} else if($(this).data('eshop')=='vrb') {
				$(this).parents('.form-vrn-main').find('.form-mvrn-item.open').not($(this).parents('.form-mvrn-item')).removeClass('open')
				$(this).parents('.form-mvrn-item').toggleClass('open')
				if($(this).parents('.form-mvrn-item').hasClass('open')) {
					$(this).parents('.form-mvrn-item').find('.fvr-switch').text('Hide')
				} else {
					$(this).parents('.form-mvrn-item').find('.fvr-switch').text('Show')
				}
			} else if($(this).data('eshop')=='vma') {
				if(!$(this).parents('.form-mvrn-item:eq(0)').hasClass('open')) {
					$(this).parents('.form-mvrn-item:eq(0)').addClass('open')
				}
				$(this).parents('.form-mvrn-item.open:eq(0)').find('.form-vrn-bag').append(eshp_vri)
				$.each($(this).parents('.form-product-main').find('.form-product-item'),function(a,b) {
					$.each($(b).find('.form-product-bag').find('.form-bag-item'),function(c,d){
						$.each($(d).find('.form-mvrn-item'),function(e,f) {
							$.each($(f).find('.form-control,.custom-file-input'),function(g,h){
								$(h).attr('name',$(h).attr('name').replace(/\[\d+\]\[\d+\]\[\]/g,'['+a+']['+c+'][]'));
								$(h).attr('name',$(h).attr('name').replace(/\[\d+\]\[\d+\]\[\d+\]\[\]/g,'['+a+']['+c+']['+e+'][]'));
							})
						})
					})
				})
				eventButtonUpload();
				getDataEshop()
			} else if($(this).data('eshop')=='vms') {
				var vval = $(this).parents('.form-vrn-edit:eq(0)').find('input[role="variant"]').val();
				$(this).parents('.form-vrn-product').find('.form-vrn-name').text(vval.ucwords());
				$(this).parents('.form-vrn-product').find('.form-vrn-view').removeClass('hide')
				$(this).parents('.form-vrn-product').find('.form-vrn-edit').removeClass('show')
			} else if($(this).data('eshop')=='vmr') {
				$(this).parents('.form-vrn-main').find('[role="select"]').prop('checked',false).val('0')
				$(this).parents('.form-vrn-main').find('.form-radio.btn-primary').removeClass('btn-primary').addClass('btn-secondary')
				$(this).removeClass('btn-secondary').addClass('btn-primary')
				$(this).find('[role="select"]').prop('checked',true).val('1')
			} else if($(this).data('eshop')=='vrs') {
				$(this).parents('.form-mvrn-item').find('[data-eshop="vrb"]').click();
			} else if($(this).data('eshop')=='vre') {
				$(this).parents('.form-vrn-product').find('.form-vrn-view').removeClass('hide').addClass('hide')
				$(this).parents('.form-vrn-product').find('.form-vrn-edit').removeClass('show').addClass('show')
			} else if($(this).data('eshop')=='vrd') {
				var ths = $(this).parents('form[role="form"]')
				var vrd = $(this).parents('.form-vrn-main')
				$(this).parents('.form-mvrn-item').remove()
				$.each(ths.find('.form-product-item'),function(a,b) {
					$.each($(b).find('.form-product-bag').find('.form-bag-item'),function(c,d){
						$.each($(d).find('.form-mvrn-item'),function(e,f) {
							$.each($(f).find('.form-control,.custom-file-input'),function(g,h){
								$(h).attr('name',$(h).attr('name').replace(/\[\d+\]\[\d+\]\[\d+\]\[\]/g,'['+a+']['+c+']['+e+'][]'));
							})
						})
					})
				})
				var ct_i = 0;
				var nm_i = vrd.find('.form-mvrn-item')
				$.each(nm_i,function(i,j){
					if($(j).find('.form-radio.btn-primary').length>0)
						ct_i++;
				})
				if(ct_i==0)
					vrd.find('.form-mvrn-item').eq(0).find('[data-eshop="vmr"]').click()
			} else if($(this).data('eshop')=='vie') {
				$(this).parents('.form-vbag-item').find('.form-vbag-view').removeClass('hide').addClass('hide')
				$(this).parents('.form-vbag-item').find('.form-vbag-edit').removeClass('show').addClass('show')
			} else if($(this).data('eshop')=='vns') {
				var vrnedit = $(this).parents('.form-vbag-edit');
				var vrnitem = $(this).parents('.form-vbag-item');
				
				var img = vrnedit.find('div[role="image"]').attr('style');
				var ttl = vrnedit.find('input[role="title"]').val();
				var prc = vrnedit.find('input[role="price"]').val();
				var prs = vrnedit.find('input[role="price_strike"]').val();
				
				vrnitem.find('.fvv-image').attr('style',img)
				
				vrnitem.find('.fvv-title').text(ttl.ucwords())
				vrnitem.find('.fvv-price').text(prc.money())
				if(prs)
					vrnitem.find('.fvv-pstrike').removeAttr('style').find('.fvv-price-strike').text(prs.money())
				else
					vrnitem.find('.fvv-pstrike').hide().find('.fvv-price-strike').text('');
				vrnedit.find('[data-eshop="vns"]').parent().removeClass('justify-content-between').addClass('justify-content-center').find('[data-eshop="pci"]').remove()
				vrnedit.find('[data-eshop="vmc"]').remove()
				vrnedit.find('[data-eshop="vnc"]').remove()
				
				var csp = $(this).parents('.form-mvrn-item').find('[data-eshop="vms"]')
				if(csp.parent().not(':visible')) {
					csp.parent().removeAttr('style')
					csp.click()
				}
				
				vrnitem.find('.form-vbag-view').removeClass('hide')
				vrnitem.find('.form-vbag-edit').removeClass('show')
				
				var ct_i = 0;
				var nm_i = $(this).parents('.form-vrn-main').find('.form-mvrn-item')
				$.each(nm_i,function(i,j){
					if($(j).find('.form-radio.btn-primary').length>0)
						ct_i++;
				})
				if(ct_i==0)
					$(this).parents('.form-mvrn-item').eq(0).find('[data-eshop="vmr"]').click()
				
			} else if($(this).data('eshop')=='vid') {
				$(this).parents('.form-vbag-item').remove()
			}
		}
		if($(this).data('eshop')=='api')
			e.stopPropagation();
		if($(this).data('eshop')!='vmc')
			e.preventDefault();
	})
}
function eventButtonUpload() {
	$('[data-image="upload"]').off('change').on('change',function(e) {
		var reader = new FileReader();
		var ths = $(this)
		var fileSize = this.files[0].size / 1024;
		
		if (fileSize <= 700) {
			$(this).parents('.form-group').find('.custom-file-label').text(this.files[0].name);
			reader.onload = function(e) {
			  ths.parents('.form-group').find('.form-image-preview').attr('style',"background-image:url('"+e.target.result+"')");
			}
			reader.readAsDataURL(this.files[0]);
			ths.parents('.form-group').find('[data-field]').text('')
		} else {
			ths.parents('.form-group').find('[data-field]').text('File size exceeds 700KB');
			ths.parents('.form-group').find('.form-image-preview').removeAttr('style')
			$(this).parents('.form-group').find('.custom-file-label').text('');
			ths.val('')
		}
	});
}
$('[data-add-image="true"]').off('click').on('click',function(e) {
	var dataform = '<div class="form-group"><div class="d-flex align-items-stretch"><div class="flex-grow-1"><label><i class="fas fa-fw fa-image fa-sm mr-1"></i> <?= $this->language->create_biolink_sliders_modal->input->image_url ?></label><div class="custom-file"><input type="file" class="custom-file-input" data-image="upload" name="images[]" accept="image/x-png,image/gif,image/jpeg" required><label class="custom-file-label" for="customFile">Choose file</label></div></div><div class="flex-grow-1 w-100 d-flex align-items-stretch mw-preview ml-2"><div class="form-image-preview"></div><div class="form-image-close" data-close-image="true">&times;</div></div></div><small class="text-danger" data-field="images.0"></small></div>';
	var img_parent = $(this).parents('.modal-body');
	if(img_parent.length==0)
		img_parent = $(this).parents('.card-body');
	var img_container = img_parent.find('.form-images-container');
	var cnt_img = img_container.find('.form-group')
	if(cnt_img.length<10) { 
		img_container.append(dataform);
		cnt_img = img_container.find('.form-group')
		$.each(cnt_img,function(i,j) {
			$.each($(j).find('[data-field]'),function(a,b) {
				if($(b).attr('data-field').indexOf('.')>-1) {
					var bt = $(b).attr('data-field').split('.');
					$(b).attr('data-field',bt[0] + '.' + i)
				}
			})
		});
	}
	eventButtonUpload()
	eventClose()
});

